<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/selSubCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/selSubCode"
            android:textStyle="bold"
            android:textSize="16sp" />

    <ListView
        android:id="@+id/dateList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/selSlot"
        android:divider="@color/abs__background_holo_light"
        android:dividerHeight="16dp" >

    </ListView>

    <TextView
        android:id="@+id/selSlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/selSubCode"
        android:text="@string/selSlot"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>